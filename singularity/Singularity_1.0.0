Bootstrap: docker
From: daviesdrew/variantcalling

%labels
    MAINTAINER Drew Davies
    DESCRIPTION Singularity image containing all requirements for daviesdrew/variantcalling pipeline
    VERSION 1.0.0


%environment 
    PATH=/opt/conda/envs/variant_1.0.0/bin:$PATH
    export PATH

%files 
    environment.1.0.0.yml /environment.yml

%post
    export PATH=/opt/conda/bin/:$PATH
    conda update conda 
    conda env create -f /environment.yml
    conda clean -a
